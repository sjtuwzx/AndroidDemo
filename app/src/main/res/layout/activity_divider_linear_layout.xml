<?xml version="1.0" encoding="utf-8"?>
<com.wzx.android.demo.DividerLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#ffffff"
    app:dividerColor="#FFFF0000"
    app:dividerSize="1dp"
    app:dividerPaddingStart="20dp"
    app:dividerPaddingEnd="10dp">

    <ImageView android:id="@+id/image"
        android:layout_width="17dp"
        android:layout_height="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/btn_flight_checkbox_hover"/>

    <Button
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:visibility="gone"/>
    <Button
        android:layout_width="30dp"
        android:layout_height="match_parent"
        app:ignore="true"/>
    <Button
        android:layout_width="30dp"
        android:layout_height="match_parent" />
    <Button
        android:layout_width="30dp"
        android:layout_height="match_parent" />
    <Button
        android:layout_width="30dp"
        android:layout_height="match_parent" />
    <Button
        android:layout_width="30dp"
        android:layout_height="match_parent" />
    <Button
        android:layout_width="30dp"
        android:layout_height="match_parent" />

</com.wzx.android.demo.DividerLinearLayout>