<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <Button android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <com.wzx.android.demo.DividerLinearLayout
        android:id="@+id/selector"
        android:layout_below="@id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        app:dividerColor="#099fde"
        app:dividerSize="1dp">

        <View
            android:id="@+id/sub_btn"
            android:layout_width="41dip"
            android:layout_height="33dip"
            android:background="@drawable/common_hotel_order_selector_ic_minus" />

        <TextView
            android:id="@+id/num_value"
            style="@style/text_18_1084bc"
            android:layout_width="40dip"
            android:layout_height="33dip"
            android:background="@drawable/common_ic_white_space_normal"
            android:gravity="center" />

        <View
            android:id="@+id/plus_btn"
            android:layout_width="41dip"
            android:layout_height="33dip"
            android:background="@drawable/common_hotel_order_select_ic_plus"/>

    </com.wzx.android.demo.DividerLinearLayout>

</RelativeLayout>

