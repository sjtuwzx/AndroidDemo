<?xml version="1.0" encoding="utf-8"?>
<com.wzx.android.demo.slidingremove.SlidingRemoveView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:container_view_id="@+id/container_view"
    app:remove_button_id="@+id/btn_remove"
    app:remove_animator_duration="250">

    <TextView android:id="@+id/btn_remove"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="19dp"
        android:textColor="#ffffff"
        android:text="删除"
        android:background="#fe3824"/>

    <LinearLayout android:id="@+id/container_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:id="@+id/btn_delete"
            android:layout_width="28dp"
            android:layout_height="60dp"
            android:paddingRight="10dp"
            android:paddingTop="21dp"
            android:paddingBottom="21dp"
            android:background="#fff000"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/person_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"/>

            <TextView android:id="@+id/person_id_card_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true" />

            <TextView android:id="@+id/person_other_info_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true" />

        </LinearLayout>

    </LinearLayout>

</com.wzx.android.demo.slidingremove.SlidingRemoveView>