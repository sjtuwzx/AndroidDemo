<?xml version="1.0" encoding="utf-8"?>
<com.wzx.android.demo.OrderPostItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="22dp"
    android:paddingRight="22dp"
    android:clickable="true"
    >

    <RelativeLayout
        android:layout_width="22dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/progress_line_top"
            android:layout_width="1px"
            android:layout_height="11dp"
            android:background="#FF69B5E9"
            android:layout_centerHorizontal="true" />

        <View
            android:id="@+id/progress_line_bottom"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginTop="-11dp"
            android:background="#FF69B5E9"
            android:layout_below="@+id/progress_round"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/progress_round"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="-11dp"
            android:layout_below="@id/progress_line_top"
            android:background="@drawable/hotel_top_current" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:paddingBottom="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="#FF99CEF2" />

        <TextView
            android:id="@+id/text_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:textColor="#FF99CEF2" />
    </LinearLayout>


</com.wzx.android.demo.OrderPostItemLayout>